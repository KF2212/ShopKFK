@model OnlineShop.Models.ProductViewModel
@{
    Layout = "_Layout";
}
<link rel="stylesheet" type="text/css" href="~/css/Product.css">
<link rel="stylesheet" type="text/javascript" href="~/js/Gallery-Product.js">
<link rel="stylesheet" type="text/javascript" href="~/css/Login.css">

<script>
    function AddToCart()
    {
        $.ajax({
            url: "../AddProduct",
            data: {
                Size: $("#Size").val(),
                Color: $("#Color").val(),
                Id: $("#Id").val()
            },
            type: "POST"
        }).done(function () {
            $("#goToCartPopup").modal();
        });
    }

    function GoToCart() {
        window.location.href = "/cart";
    }
</script>

<body>
    <div>
        <div class="col-md-6 description">
            <div class="container">
                @Html.HiddenFor(model => model.Id)
                <h1>@Model.Name</h1>
                <h2>@Model.Description</h2>
                @Html.DropDownListFor(model => model.Size, Model.SizeSelectList, "Please select", new { style = "color: #000;" })
                @Html.DropDownListFor(model => model.Color, Model.ColorSelectList, "Please select", new { style = "color: #000;" })
                <div class="row">
                    <div class="col-md-6">
                        <a class="tabela" href="#"><img src="~/images/converse-fashion-footwear-52574.jpg" class="zdj_jak_mierz"><span><img src="~/images/converse-fashion-footwear-52574.jpg" width="498" height="498"></span></a>
                    </div>
                </div>
                <input class="btn-primary" type="button" value="Dodaj do koszyka" onclick="AddToCart()" />
            </div>
        </div>
        <div col-md-6>
            <div class="gallery">
                <img src="~/images/shop1-big.jpg" class="gallery-first" alt="">
                <div class="preview">
                    <img src="~/images/shop1-small.jpg" class="room-active" alt="">
                    <img src="~/images/shop2-small.jpg" alt="">
                    <img src="~/images/shop3-small.jpg" alt="">
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="goToCartPopup" role="dialog">
        <div class="modal-dialog" style="background-color: white">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Dodano do koszyka</h4>
            </div>
            <div class="modal-body">
                <p>Czy chcesz kontynuować zakupy?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Kontynuuj zakupy</button>
                <button type="button" class="btn" onclick="GoToCart()">Do koszyka</button>
            </div>
        </div>
    </div>
            @*<div class="text-center">
                <h1>Zobacz podobne</h1>
            </div>*@
            @Html.Partial("_SuggestedProducts")


</body>
@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Shopping cart</title>
</head>
<body>

    <h3>Your shopping cart</h3>
    <br>
    <br>
    <table class="table table-bordered">
        <tr>
            @*<th>Id</th>*@
            <th>Name</th>
            @*<th>Photo</th>*@
            <th>Price</th>
            <th>Quantity</th>
            <th>Option</th>
            <th>Sub Total</th>
        </tr>
        @foreach (var item in ViewBag.cart)
        {
        <tr>
            @*<td>@item.Product.Id</td>*@
            <td>@item.Product.Name</td>
            @*<td><img src="~/images/@item.Product.Photo" width="60" /> </td>*@
            <td>@item.Product.Price</td>
            <td>@item.Quantity</td>
            <td><a asp-controller="ShoppingCart" asp-action="Remove" asp-route-id="@item.Product.Id"><input type="button" class="btn btn-default" value="Delete" /></a></td>
            <td>@(item.Product.Price * item.Quantity)</td>
        </tr>
        }
        <tr>
            <td align="right" colspan="6">Sum</td>
            <td>
                @ViewBag.total
            </td>
        </tr>
    </table>
    <br>
    <div>
        <a asp-controller="Home" asp-action="MainPage"><input type="button" class="btn btn-default" value="Continue shopping" /></a>
    </div>
    <div>
        <h3 class="text-center">You can also like:</h3>
        @await Component.InvokeAsync("SuggestedProducts")
    </div>

</body>
</html>